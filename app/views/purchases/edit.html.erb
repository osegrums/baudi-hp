<div class="main" id="inputform">
  <div class="innerBox">
    <%= form_for @purchase, url: purchase_path(@purchase.uid), html: {id: 'purchase-edit-form'} do |f| %>
      <% if @purchase.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

          <ul>
          <% @purchase.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <h1 class="first"><%= t '.title' %></h1>
      <div class="pirkumaRezume">
        <%= render "#{@itemable.class.name.downcase}_resume", itemable: @itemable %>
      </div><!-- end.pirkumaRezume"-->

      <span class="clear" />

      <h2 style="border-top:1px solid #ccc; margin-top: 40px; padding-top:30px"><%= t '.enter_your_data' %></h2>
      <table width="610" class="inputformTable">
        <tr>
          <td width="122">
            <label for="purchase-name"><%= Purchase.human_attribute_name(:name) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :name, class: 'form-control', placeholder: '', id: 'purchase-name' %>
          </td>
        </tr>
        <tr>
          <td width="122">
            <label for="purchase-email"><%= Purchase.human_attribute_name(:email) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :email, class: 'form-control', placeholder: '', id: 'purchase-email' %>
          </td>
        </tr>
        <tr>
          <td width="122">
            <label for="purchase-phone"><%= Purchase.human_attribute_name(:phone) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :phone, class: 'form-control', placeholder: '', id: 'purchase-phone' %>
          </td>
        </tr>
        <tr>
          <td colspan="2"><img src="/images/css/line_dotted.gif" alt="" width="497" height="1" style="padding: 5px 0" /></td>
        </tr>
        <tr>
          <td width="122">
            <label for="purchase-address"><%= Purchase.human_attribute_name(:address) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :address, class: 'form-control', placeholder: '', id: 'purchase-address' %>
          </td>
        </tr>
        <tr>
          <td width="122">
            <label for="purchase-zip-code"><%= Purchase.human_attribute_name(:zip_code) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :zip_code, class: 'form-control', placeholder: '', id: 'purchase-zip-code' %>
          </td>
        </tr>
        <tr>
          <td width="122">
            <label for="purchase-city"><%= Purchase.human_attribute_name(:city) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :city, class: 'form-control', placeholder: '', id: 'purchase-city' %>
          </td>
        </tr>
        <tr>
          <td width="122">
            <label for="purchase-country"><%= Purchase.human_attribute_name(:country) %>:</label>
          </td>
          <td width="471">
            <%= f.text_field :country, class: 'form-control', placeholder: '', id: 'purchase-country' %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit value: t('.complete_order'), class: "btn-style" %>
          </td>
        </tr>
      </table>
      <div style="border-top:1px solid #ccc; margin-top:40px" />

    <% end %>
  </div><!-- end.innerBox -->
</div><!-- end.main -->
