<h1>Listing dimensions</h1>

<table class="table table-stripped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dimensions.each do |dimension| %>
      <tr>
        <td><%= dimension.name %></td>
        <td><%= index_show_link polymorphic_path([:back_end, @itemable, dimension]) %></td>
        <td><%= index_edit_link polymorphic_path([:edit, :back_end, @itemable, dimension]) %></td>
        <td><%= index_destroy_link polymorphic_path([:back_end, @itemable, dimension]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dimension', polymorphic_path([:new, :back_end, @itemable, :dimension]), class: 'btn btn-default' %>
<%= link_to "Back to master", polymorphic_path([:back_end, @itemable]), class: 'btn btn-default' %>
