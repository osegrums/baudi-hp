<h1>Listing dimensions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dimensions.each do |dimension| %>
      <tr>
        <td><%= dimension.name %></td>
        <td><%= link_to 'Show', polymorphic_path([:back_end, @itemable, @dimension]) %></td>
        <td><%= link_to 'Edit', polymorphic_path([:edit, :back_end, @itemable, @dimension]) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([:back_end, @itemable, @dimension]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dimension', polymorphic_path([:new, :back_end, @itemable, :dimension]) %> |
<%= link_to "Back to master", polymorphic_path([:back_end, @itemable]) %>
