<%= form_for @color, url: url do |f| %>
  <% if @color.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@color.errors.count, "error") %> prohibited this color from being saved:</h2>

      <ul>
      <% @color.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name_lv %>
    <%= f.text_field :name_lv, class: 'form-control', placeholder: '' %>
  </div>
  <div class="form-group">
    <%= f.label :name_en %>
    <%= f.text_field :name_en, class: 'form-control', placeholder: '' %>
  </div>
  <div class="form-group">
    <%= f.label :name_ru %>
    <%= f.text_field :name_ru, class: 'form-control', placeholder: '' %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <% if @color.persisted? %>
      <%= link_to 'Show', back_end_bed_color_path(@itemable, @color), class: 'btn btn-default' %>
    <% end %>
    <%= link_to 'Color list', back_end_bed_colors_path(@itemable), class: 'btn btn-default' %>
  </div>
<% end %>
