<h1>Listing kits</h1>

<table>
  <thead>
    <tr>
      <th>Latviski</th>
      <th>Angliski</th>
      <th>Krieviski</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kits.each do |kit| %>
      <tr>
        <td><%= kit.name_lv %></td>
        <td><%= kit.name_en %></td>
        <td><%= kit.name_ru %></td>
        <td><%= link_to 'Show', polymorphic_path([:back_end, @itemable, kit]) %></td>
        <td><%= link_to 'Edit', polymorphic_path([:edit, :back_end, @itemable, kit]) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([:back_end, @itemable, kit]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kit', polymorphic_path([:new, :back_end, @itemable, :kit]) %> |
<%= link_to "Back to master", polymorphic_path([:back_end, @itemable]) %>
