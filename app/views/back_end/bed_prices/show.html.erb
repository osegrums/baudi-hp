<h1>Bed '<%= @bed.name %>' prices</h1>

<%= form_for @bed, url: back_end_bed_prices_path(@bed) do |f| %>
  <table class="table table-stripped table-bordered table-hover">
    <tr>
      <th></th>
      <% @bed.dimensions.each do |dimension| %>
        <th>
          <%= dimension.name %>
        </th>
      <% end %>
    </tr>
    <%= render 'edit_prices_row', f: f, mode: 'show', has_decoration: false, has_rack: false %>
    <%= render 'edit_prices_row', f: f, mode: 'show', has_decoration: true,  has_rack: false %>
    <%= render 'edit_prices_row', f: f, mode: 'show', has_decoration: false, has_rack: true  %>
    <%= render 'edit_prices_row', f: f, mode: 'show', has_decoration: true,  has_rack: true  %>
  </table>
<% end %>

<%= link_to 'Edit prices', edit_back_end_bed_prices_path(@bed), class: 'btn btn-primary' %>
<%= link_to 'Back to bed', back_end_bed_path(@bed), class: 'btn btn-default' %>
