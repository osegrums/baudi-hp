<p>
  <strong>Bilde:</strong>
  <%= image_tag @thumb.file.mini.url %>
</p>

<p>
  <strong>Is Default selection:</strong>
  <%= human_boolean @thumb.is_default %>
</p>

<% if @thumb.thumbable.is_a?(Bed) %>
  <p>
    <strong>Komplekta bilde:</strong>
    <%= human_boolean @thumb.is_kit_image %>
  </p>
<% end %>
<p>
  <strong>Nosaukums:</strong>
  <%= @thumb.name %>
</p>

<p>
  <strong>Apraksts:</strong>
  <%= @thumb.description %>
</p>

<%= link_to 'Edit', polymorphic_path([:edit, :back_end, @itemable, @thumbable, @thumb]), class: 'btn btn-primary' %>
<%= link_to 'Images list', polymorphic_path([:back_end, @itemable, @thumbable, :thumbs]), class: 'btn btn-default' %>
